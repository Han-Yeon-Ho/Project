    <h4 class="container mt-4"><strong>Log in 페이지</strong></h4>
    <div class="container mt-3">
      <form action="/login" method="POST">
        <div class="form-group">
          <label>ID</label>
          <input type="text" class="form-control " name="id">
        </div>
        <div class="form-group">
          <label>PASSWORD</label>
          <input type="password" class="form-control " name="pw">
        </div>
        <button type="submit" class="btn btn-outline-secondary">Submit</button>
        <button type="button" class="btn btn-warning join">Join</button>
    </form>
</div>


    
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>

      $('.join').click(function (e) {
        var 글번호 = e.target.dataset.id;
        var 지금누른거 = $(this);
        var id =document.getElementsByClassName("form-control")[0].value;
        var pw =document.getElementsByClassName("form-control")[1].value;
        console.log(id);
        console.log(pw);
        $.ajax({
          method: 'POST',
          url: '/join',
          data: { id: id,pw : pw}
        }).done( (결과)=> {
          //페이지를 강제로 새로고침.
          //li에서 해당 리스트 가리기
          console.log('가입하기');
          window.location.replace(`/go`);
         // alert('등록이 완료되었습니다.')
         // $(this).parent('li').fadeOut();
        }).fail(function (에러) {
          //
          alert('사용중인 아이디입니다.');
        });
      });
      </script>


